{
  "name": "mindboost-backend",
  "version": "1.0.0",
  "description": "Backend API for Mindboost - Adaptive Learning Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "prisma generate && prisma db push && tsx watch src/index.ts",
    "start": "prisma generate && prisma db push && tsx watch src/index.ts",
    "start:fresh": "npm run db:reset && npm start",
    "build": "tsc",
    "start:prod": "npm run db:setup && node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:setup": "prisma generate && prisma migrate deploy",
    "db:reset": "prisma migrate reset --force && npm run db:seed"
  },
  "prisma": {
    "seed": "tsx src/prisma/seed.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^5.7.1",
    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "socket.io": "^4.8.1",
    "stripe": "^14.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.19",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
